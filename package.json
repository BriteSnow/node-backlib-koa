{
  "name": "@backlib/koa",
  "version": "0.2.0",
  "description": "Minimalist KOA utilities for backend web services",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=14.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/britesnow/node-backlib-koa.git"
  },
  "scripts": {
    "test": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/spec/*.spec.ts",
    "testw": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/spec/*.spec.ts --watch --watch-files './test/**/*.ts','./src/**/*.ts'",
    "prepare": "node_modules/.bin/rimraf ./dist && ./node_modules/.bin/tsc"
  },
  "author": "jeremy.chone@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^9.3.1",
    "@types/koa": "^2.11.3",
    "@types/koa__router": "^8.0.2",
    "fs-extra-plus": "^0.5.18",
    "koa": "^2.13.0",
    "koa-compose": "^4.1.0"
  },
  "peerDependencies": {
    "backlib": "^0.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.0",
    "mocha": "^8.0.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.6"
  },
  "files": [
    "src/",
    "dist/"
  ]
}
