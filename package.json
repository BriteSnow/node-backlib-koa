{
  "name": "@backlib/site",
  "version": "0.1.1",
  "description": "Minimalist KOA site utilities",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=14.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/britesnow/node-backlib-site.git"
  },
  "scripts": {
    "test": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/spec/*.spec.ts",
    "testw": "TS_NODE_FILES=true ./node_modules/.bin/mocha -p ./test/tsconfig.json ./test/spec/*.spec.ts --watch --watch-files './test/**/*.ts','./src/**/*.ts'",
    "prepare": "node_modules/.bin/rimraf ./dist && ./node_modules/.bin/tsc"
  },
  "author": "jeremy.chone@gmail.com",
  "license": "MIT",
  "dependencies": {
    "@backlib/koa": "^0.3.3",
    "backlib": "^0.3.1",
    "execa": "^5.0.0",
    "fs-extra-plus": "^0.5.21",
    "handlebars": "^4.7.7",
    "js-yaml": "^4.0.0",
    "koa-compose": "^4.1.0",
    "koa-static": "^5.0.0",
    "markdown-it": "^12.0.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/koa-static": "^4.0.1",
    "@types/markdown-it": "^12.0.1",
    "@types/mocha": "^8.2.0",
    "backlib": "^0.3.1",
    "mocha": "^8.3.0",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.5"
  },
  "files": [
    "src/",
    "dist/"
  ]
}
