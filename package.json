{
  "name": "@backlib/koa",
  "version": "0.3.0-SNAPSHOT-02",
  "description": "Minimalist KOA utilities for backend web services",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=14.4"
  },
  "repository": {
    "type": "git",
